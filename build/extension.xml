<extension xmlns="http://ns.adobe.com/air/extension/22.0">
  <id>com.freshplanet.ane.AirImagePicker</id>
  <versionNumber>1</versionNumber>
  <platforms>

    <platform name="iPhone-ARM">
        <applicationDeployment>
            <nativeLibrary>libAirImagePicker.a</nativeLibrary>
            <initializer>AirImagePickerInitializer</initializer> 
            <finalizer>AirImagePickerFinalizer</finalizer>
        </applicationDeployment>
    </platform>

    <platform name="Android-ARM">
        <applicationDeployment>
            <nativeLibrary>libAirImagePicker.jar</nativeLibrary>
            <initializer>com.freshplanet.ane.AirImagePicker.AirImagePickerExtension</initializer>
            <finalizer>com.freshplanet.ane.AirImagePicker.AirImagePickerExtension</finalizer>
        </applicationDeployment>
    </platform>

    <platform name="Android-ARM64">
        <applicationDeployment>
            <nativeLibrary>libAirImagePicker.jar</nativeLibrary>
            <initializer>com.freshplanet.ane.AirImagePicker.AirImagePickerExtension</initializer>
            <finalizer>com.freshplanet.ane.AirImagePicker.AirImagePickerExtension</finalizer>
        </applicationDeployment>
    </platform>

    <platform name="Android-x86">
        <applicationDeployment>
            <nativeLibrary>libAirImagePicker.jar</nativeLibrary>
            <initializer>com.freshplanet.ane.AirImagePicker.AirImagePickerExtension</initializer>
            <finalizer>com.freshplanet.ane.AirImagePicker.AirImagePickerExtension</finalizer>
        </applicationDeployment>
    </platform>
    
    <platform name="default"> 
        <applicationDeployment/> 
    </platform> 
  </platforms>
</extension>